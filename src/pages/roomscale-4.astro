                if (result instanceof ArrayBuffer) {
                    blob = new Blob([result], {
                        type: "application/octet-stream",
                    });
                } else if (typeof result === "object") {
                    blob = new Blob([JSON.stringify(result)], {
                        type: "application/json",
                    });
